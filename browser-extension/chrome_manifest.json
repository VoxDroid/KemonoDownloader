{
  "manifest_version": 3,
  "name": "Kemono Downloader Extension",
  "short_name": "KemonoDLE",
  "version": "1.2.0",
  "description": "Download posts from Kemono and Coomer sites",
  "author": "VoxDroid",
  "homepage_url": "https://github.com/VoxDroid/KemonoDownloader",
  "permissions": [
    "activeTab",
    "downloads",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://kemono.cr/*",
    "https://coomer.st/*",
    "https://*.kemono.cr/*",
    "https://*.coomer.st/*",
    "https://n4.coomer.st/*",
    "https://n4.kemono.cr/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://kemono.cr/*",
        "https://coomer.st/*",
        "https://*.kemono.cr/*",
        "https://*.coomer.st/*"
      ],
      "js": ["jszip.min.js", "content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
}